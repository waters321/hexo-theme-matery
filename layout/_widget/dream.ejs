<div class="dream">
    <% if (theme.dream.showTitle) { %>
    <div class="title center-align">
        <i class="far fa-lightbulb"></i>&nbsp;&nbsp;<%= theme.dream.title %>&nbsp;&nbsp;<i class="far fa-lightbulb"></i>
    </div>
    <% } %>
    <% if (theme.dream.text) { %>
    <div class="row">
        <div class="col l8 offset-l2 m10 offset-m1 s10 offset-s1 center-align text">
            <%- theme.dream.text %>
        </div>
    </div>
    <% } %>
</div>
